# Logging configuration
# Possible values: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# HTTP RCON credentials (primary communication channel)
# Example: https://server.example.com
CRCON_HTTP_BASE_URL=
# Token appears in HLL CRCON HTTP docs
CRCON_HTTP_BEARER_TOKEN=
# Request timeout in seconds (float allowed)
CRCON_HTTP_TIMEOUT=10
# Set to false to skip certificate verification (useful for self-signed certs)
CRCON_HTTP_VERIFY=true

# Fallback RCON v2 settings (used when HTTP fails)
RCON_HOST=
RCON_PORT=20401
RCON_PASSWORD=

# Timezone for schedule evaluation (use Olson database IDs)
# Default is UTC
TIMEZONE=UTC

# Rotation schedule definition
# Path must point to a JSON file like weekly_rotation.json in this repo
WEEKLY_ROTATION_PATH=weekly_rotation.json

# Multi-rotation JSON overrides (optional)
# Leave ROTATION_NAME empty to let the file cycle between rotations automatically.
ROTATION_NAME=
# ISO date used to anchor the rotation cycle when auto-selecting (default 2025-01-01).
ROTATION_CYCLE_ANCHOR=2025-01-01
